@model IndexViewModel
@{
    ViewData["Title"] = "Gestão de Conta";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Olá @Model.FirstName. Faz aqui a gestão da tua conta Si&#9837;.</h4>
    <hr />

    <div class="row">
        <div class="col-lg-3">
            <h2>Password</h2>
            @if (Model.HasPassword)
            {
                <p>Tens a tua password criada.</p>
                <p><a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Alterar</a></p>
            }
            else
            {
                <p>Não tens tenhma password!</p>
                <p><a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Criar.</a></p>
            }
        </div>
        <div class="col-lg-3">
            <h2>Facebook</h2>
            @if (@Model.Logins.Any(m => m.ProviderDisplayName == "Facebook"))
            {
                <p>A ligação com o Facebook está criada.</p>
            }
            else
            {
                <p>A ligação com o Facebook não está criada!</p>
            }
            <p><a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">Gerir</a></p>
        </div>
        <div class="col-lg-3">
            <h2>Telemóvel</h2>
            <p>@(Model.PhoneNumber ?? "Nenhum")</p>
            @if (Model.PhoneNumber != null)
            {
                
                <p><a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Alterar</a></p>
                @*<form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                [<button type="submit" class="btn-link">Remover</button>]
            </form>*@
            }
            else
            {
                <p><a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn-bracketed">Adicionar</a></p>
            }
        </div>
        <div class="col-lg-3">
            <h2>E-mail</h2>
            <p>@(Model.Email ?? "Nenhum")</p>
            
        </div>
    </div>
    
    <div class="well-lg">
        <a asp-controller="Account" asp-action="LogOff" class="btn btn-danger">Desligar.</a>
    </div>
</div>
