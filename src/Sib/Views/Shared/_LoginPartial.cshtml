@using Sib.Core.Authentication
@using Sib.Core.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject SibUserManager<ApplicationUser> UserManager

@{
    var givenName = await UserManager.GetUserGivenName(User).ConfigureAwait(false);
    var userName = givenName ?? UserManager.GetUserName(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Olá @userName!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off.</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registar</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
